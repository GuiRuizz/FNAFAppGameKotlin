<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoItem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bonnie"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nomeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonnie FNAF 1"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fotoItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/decricaoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test6tfgtfudfornfuighyhefgjingkijh"
        android:layout_marginStart="140dp"
        android:textSize="16sp"
        android:maxLines="4"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nomeItem"
        app:layout_constraintStart_toEndOf="@id/fotoItem"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/precoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 800,00"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/decricaoItem"
        app:layout_constraintStart_toEndOf="@id/fotoItem"
        />

</androidx.constraintlayout.widget.ConstraintLayout>